<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- App Logo -->
            <ImageView
                android:layout_width="409dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@color/purple"
                android:contentDescription="@string/app_logo"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo" />

            <!-- Helpline Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpline"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpline_con"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpline_number"
                android:textColor="@color/purple"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helpline_hours"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/national_con"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <!-- National Helpline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/national_helpline"
                android:textColor="@color/purple"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/national_helpline_number"
                android:textColor="@color/blue"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Helpline Icon -->
            <ImageView
                android:layout_width="379dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/national_helpline"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_wheelchair" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple"
        android:paddingVertical="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:id="@+id/home_button"
            app:drawableTopCompat="@drawable/ic_round_home" />

    </LinearLayout>
</LinearLayout>
