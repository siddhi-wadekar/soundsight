<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/purple"
    android:padding="16dp">

    <!-- Logo at the top -->

    <!-- Rounded White Card -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="95dp"
        android:layout_height="97dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/ic_logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="749dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Sign Up Title -->
            <TextView
                android:id="@+id/signUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/sign_up"
                android:textColor="@color/purple"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="emailAddress"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

            <!-- Phone Number Input -->
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="phoneNumber"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="password"
                android:drawableStart="@drawable/ic_password"
                android:drawableEnd="@drawable/ic_hide"
                android:drawablePadding="8dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />


            <!-- Choose Impairment Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/choose_impairment"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rgImpairmentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbAuditoryImpaired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auditory_impaired"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/rbVisuallyImpaired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visually_impaired"
                    android:textColor="@color/blue" />

            </RadioGroup>

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/purple"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="20dp" />

            <!-- Sign In Option -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/already_have_acc"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="14sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>